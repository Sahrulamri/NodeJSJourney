<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h2 class="my-4">Form Edit Contact</h2>

            <% if (typeof errors != 'undefined') { %>
             <div class="alert alert-danger" role="alert">
              <ul>
                <% errors.forEach(error => { %>
                 <li><%= error.msg %></li>
                <% }) %>
              </ul>
             </div>
            <% } %>

            <form action="/contact/update" method="post">
                <input type="hidden" name="oldNama" value="<%= contact.nama %>">
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" placeholder="Nama" name="nama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
                  </div>
                  <div class="mb-3">
                    <label for="noHp" class="form-label">NO HP</label>
                    <input type="text" class="form-control" id="noHp" placeholder="No HP" name="nohp" value="<%= contact.nohp %>">
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email" value="<%= contact.email %>">
                  </div>
                  <div class="d-flex justify-content-center">
                      <button type="submit" class="btn btn-primary justify-content-center flex-fill">Update Contact</button>
                  </div>
            </form>
        </div>
    </div>
</div>